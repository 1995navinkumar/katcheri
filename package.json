{
  "name": "peer-party",
  "version": "1.0.0",
  "description": "Create or join a music party and enjoy the streaming in sync",
  "main": "main.js",
  "browserify-css": {
    "minify": true
  },
  "scripts": {
    "postinstall": "mkdirp extension/public/js extension/public/css",
    "build:css": "browserify style.js -t [ browserify-css --output extension/public/css/bundle.css ] > /dev/null",
    "build:js": "browserify main.js -t babelify -t browserify-css -t uglifyify | uglifyjs -cm > extension/public/js/bundle.js",
    "build": "NODE_ENV=production run-s build:*",
    "watch:css": "watchify style.js -t [ browserify-css --output extension/public/css/bundle.css ] -o /dev/null -dv",
    "watch:js": "watchify main.js -t babelify -g browserify-css -o extension/public/js/bundle.js -dv",
    "watch": "run-p watch:*",
    "clean": "rimraf extension/public/js extension/public/css node_modules",
    "start": "serve extension/public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1995navinkumar/peer-party.git"
  },
  "keywords": [
    "peer",
    "party",
    "webrtc",
    "audio",
    "streaming"
  ],
  "author": "navinkumar.c harish.v",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/1995navinkumar/peer-party/issues"
  },
  "homepage": "https://github.com/1995navinkumar/peer-party#readme",
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/lab": "^4.0.0-alpha.39",
    "@material/react-snackbar": "^0.15.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "browserify-css": "^0.15.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "serve": "^11.1.0",
    "uglify-js": "^3.6.0",
    "uglifyify": "^5.0.2",
    "watchify": "^3.11.1"
  }
}
